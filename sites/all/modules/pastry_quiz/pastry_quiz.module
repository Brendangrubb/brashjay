        ),
        '#required' => TRUE,
    );

    $form['submit'] = array(
        '#type' => 'submit',
        '#value' => 'Submit',
    );

    return $form;
}

function gf_choc_fruit_form_submit($form, &$form_state) {
    $chocolate = $form_state['values']['gf_choc_fruit'];
